<h1>Listing domains</h1>

<table class="table table-striped" id="domains">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

<% @domains.each do |domain| %>
  <tr id="domain_<%= domain.id %>">
    <td><%= domain.name %></td>
    <td>
      <%= link_to 'Show', domain, class: 'btn btn-mini btn-info' %>
      <%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Domain', new_domain_path, class: 'btn btn-success pull-right' %>
